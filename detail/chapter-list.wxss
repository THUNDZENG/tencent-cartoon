@import "../__wuBaseWxss__/10.wxss";

@import "chapter-item/chapter-item.wxss";

@import "chapter-nav-btns/chapter-nav-btns.wxss";

.list-header {
    display: flex;
    align-items: center;
    height: 60rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    background: #faf9f9;
}

.list-header::before {
    content: '';
    display: block;
    position: absolute;
    z-index: 1;
    top: -1px;
    left: 0;
    width: 100%;
    height: 1px;
    box-shadow: 0 0 4px rgba(9,2,4,.12);
}

.chapter-count {
    flex: 1;
    color: #c5c5c5;
}

.chapter-order {
    color: #535252;
}

.icon-order {
    width: 32rpx;
    height: 32rpx;
    transform: rotate(180deg);
}

.icon-order.desc {
    transform: rotate(0deg);
}