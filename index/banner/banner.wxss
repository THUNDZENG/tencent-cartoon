.banner {
    position: relative;
    z-index: 1;
    width: 100%;
    background: #efefff;
}

.banner-pad {
    width: 100%;
    padding-top: 42.4%;
}

.banner-swiper {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transform: translateZ(0);
}

.banner-image {
    position: absolute;
    z-index: 5;
    width: 100%;
    height: 100%;
}

.banner-indicator-list {
    display: flex;
    position: absolute;
    z-index: 6;
    left: 33rpx;
    bottom: 20rpx;
}

.banner-indicator {
    margin-right: 13rpx;
    width: 12rpx;
    height: 12rpx;
    border-radius: 12rpx;
    background: #fff;
    transition: width 300ms ease;
}

.banner-indicator.current {
    width: 21rpx;
    background: #ff9a6a;
}